$fn=50;

module diamond() {
    polyhedron(points = [[0, 0, 0], 
    [3, 0, 6], [0, 2, 6], [-3, 0, 6], [0, -2, 6],
    [0, 0, 12]],
    faces = [
        [0, 1, 2], [0, 2, 3], [0, 3, 4], [0, 4, 1],
        [5, 2, 1], [5, 3, 2], [5, 4, 3], [5, 1, 4]
    ]);
}

for(i = [0: 1: 3]) {
    translate([20 * i, 0, 0]) diamond();
}
